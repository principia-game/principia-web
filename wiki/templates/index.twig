{% extends "_layout.twig" %}

{% set title = pagetitle %}
{% set pagename = '/wiki/' ~ pagetitle_slugified %}

	{% block content %}
{% if pagetitle != 'Main Page' %}
	<h1>{{ pagetitle }}</h1>
{% endif %}

{% if pagecontent %}
	{{ pagecontent | markdown_wiki }}
{% else %}
	<p>A wiki page with this name does not exist.</p>
{% endif %}
	{% endblock %}
