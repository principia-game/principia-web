{% extends "_layout.twig" %}

{% set title = "Login" %}
{% set description = "Log in to principia-web." %}

	{% block content %}
{% if error %}
	<div class="header_message">{{ error }}</div>
{% endif %}

<h2>Login</h2>

<p><em>Note: Your old Bithack account will not work.</em></p>
<form class="reglog" method="POST" action="/login">
	<p>
		<span>Username:</span>
		<input type="text" name="name" size="25" maxlength="25">
	</p>
	<p>
		<span>Password:</span>
		<input type="password" name="pass" size="25" maxlength="32">
	</p>
	<a href="/register">Don't have an account yet? Register!</a>
	<p><input type="submit" class="submit" name="action" value="Login"></p>
</form>
	{% endblock %}