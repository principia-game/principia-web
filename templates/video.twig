{% extends "_layout.twig" %}

{% set title = video.title %}
{% set description = video.description %}
{% set image = "https://i.ytimg.com/vi_webp/" ~ video.youtube_id ~ "/mqdefault.webp" %}
{% set pagename = "/video/" ~ video.youtube_id %}

	{% block content %}
<h1>{{ video.title }}</h1>

<p>Posted by {{ userlink(video, 'u_') }} &ndash; <a href="https://www.youtube.com/watch?v={{ video.youtube_id }}">Watch on YouTube</a></p>

<div class="video-frame img-responsive">
<iframe width="640" height="360" src="https://www.youtube-nocookie.com/embed/{{ video.youtube_id }}"
frameborder="0"	allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
allowfullscreen></iframe>
</div>

<h3>Description</h3>

<p>{{ video.description | markdown_nl }}</p>

	{% endblock %}