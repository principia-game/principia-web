{% extends "_layout.twig" %}

{% set title = name %}
{% set description = userpagedata.about|replace({"\r":'',"\n":' '}) %}
{% set pagename = "/user/" ~ id %}

	{% block content %}
{% if action == 'markread' %}
	<div class="header_message">Marked all notifications as read.</div>
{% elseif action == 'edited' %}
	<div class="header_message">Settings successfully saved!</div>
{% elseif action == 'ban' %}
	<div class="header_message">Successfully banned this user.</div>
{% elseif action == 'unban' %}
	<div class="header_message">Successfully unbanned this user.</div>
{% endif %}

{% if userdata.id == id and not forceuser %}
<h2>{{ name }}</h2>

{% if userdata.powerlevel < 0 %}
<div class="banner b-red userban">
	Your account has been banned.
	{% if userdata.banreason %}
		<br><br>Reason: {{ userdata.banreason }}
	{% else %}
		<br><br>No reason was provided.
	{% endif %}
</div>
{% endif %}

<p>Welcome to your personal user page. Here, you can see and manage your uploaded levels, customize your profile, and edit your settings.</p>

<p><a href="/settings">Edit my settings</a>
&bull; <a href="/forum/private">View my private messages</a>
&bull; <a href="/user/{{ id }}?forceuser">View user page as viewer</a>
&bull; <a href="javascript:document.logout.submit()">Log out</a></p>

{% if userdata.powerlevel > 2 %}
<p><a href="/admin">Admin panel</a></p>
{% endif %}

<form action="/login" method="post" name="logout">
	<input type="hidden" name="logout" value="yes">
</form>

<h3>Links</h3>

<ul>
	<li><a href="/download">Download principia-web mods</a></li>
	{% if discord_invite %}
		<li><a href="{{ discord_invite }}">Unofficial Principia Discord Server</a></li>
	{% endif %}
</ul>

<h3>Notifications</h3>
<ul>
	{% for notif in notifs %}
		<li>{{ notif | raw }}</li>
	{% else %}
		<li>No new notifications!</li>
	{% endfor %}
	{% if notifs %}
		<br><li><a href="/user/{{ id }}?markread">Mark all as read</a></li>
	{% endif %}
</ul>
{% else %}
<div class="user_stats">
	<div class="topthing"><b>General information</b></div>
	<div class="row">
		<b>Forum Threads</b>: {{ userpagedata.threads }}
		<span class="pad"><b>Forum Posts</b>: {{ userpagedata.posts }}</span>
	</div>
	<div class="row">
		<b>Registered on</b>: {{ userpagedata.joined | date('Y-m-d H:i:s') }}
	</div>
	<div class="row">
		<b>Last view</b>: {{ userpagedata.lastview | relative_time }}
	</div>
</div>
<h2>{{ name }}
	{% if userpagedata.powerlevel > 1 %}<img class="sdsd" src="/assets/icons/shield.svg" height="16" title="User is a moderator.">{% endif %}
	{% if userpagedata.powerlevel < 0 %}<img class="sdsd" src="/assets/icons/gavel.svg" height="16" title="User has been banned.">{% endif %}</h2>

<div class="user_about">
	<h3>About this user</h3>
	{{ userpagedata.about | markdown }}
</div>

<p class="clear_right">
	<a href="/forum/forum?user={{ id }}">View threads</a>
	&bull; <a href="/forum/thread?user={{ id }}">Show posts</a>
	{% if log %}
		{% if userdata.id != id %}
			&bull; <a href="/forum/sendprivate?uid={{ id }}">Send private message</a>
		{% endif %}
		{% if userdata.powerlevel > 2 %}
			&bull; <a href="/resetpassword?grf={{ id }}">Generate password reset for user</a>
		{% endif %}
		{% if userdata.powerlevel > 1 %}
			&bull; <a href="/_ban_user?id={{ id }}">{% if userpagedata.powerlevel < 0 %}Unb{% else %}B{% endif %}an user</a>
		{% endif %}
	{% endif %}
</p>

{% for level in levels %}
	{{ level(level) }}
{% else %}
	This user doesn't have any uploaded levels.
{% endfor %}

{% if userdata.id == id %}
	{% set forceuser = "&forceuser" %}
{% else %}
	{% set forceuser = "" %}
{% endif %}
{% set le_url = '/user/' ~ id ~ '?page=%s' ~ forceuser %}
{{ pagination(level_count, glob_lpp, le_url, page) }}

{{ comments(comments, 'user', id) }}
{% endif %}
	{% endblock %}
