{% extends "_layout.twig" %}

{% if newsid %}
	{% set title = news.title %}
	{% set description = news.text %}
	{% set pagename = "/news/" ~ newsid %}
{% else %}
	{% set title = "News" %}
{% endif %}

	{% block content %}
{% if newsid %}
	<h1>{{ news.title }}</h1>

	{% if news.cover %}
		<img src="images/{{ newsid }}/cover.webp" style="max-width:100%">
	{% endif %}

	<p><em>Posted on {{ news.time | date('j M Y') }} by {{ news.author | default('ROllerozxa') }}</em></p>
	<div class="news">
		{{ news.text | markdown_unsafe }}
	</div>
{% else %}
	<h1 class="header">Latest News</h1>
	<ul class="latestnews">
		{% for new in news %}
			<li><b>{{ new.time | date('j M Y') }}</b><a href="/news/{{ new.id }}">{{ new.title }}</a></li>
		{% else %}
			<li>No news.</li>
		{% endfor %}
	<ul>
{% endif %}
	{% endblock %}
