{% extends "_layout.twig" %}

{% set title = pkg.title %}
{% set pagename = "/package/" ~ pkg.id %}

	{% block content %}
<h1>{{ pkg.title }}</h1>

<span class="misc">
	By {{ userlink(pkg, 'u_') }}
	&ndash; Package
	&ndash; uploaded {{ level.time | date('j M Y') }}</span>

<div class="lvl-box">
	<div class="img">
		<img src="/assets/package_thumb.svg" alt="Package">
	</div>

	<div class="info">
		<a class="play-btn green" href="principia://play/pkg/db/{{ id }}">Play</a>

		<p>{{ pkg.description | markdown }}</p>
	</div>
</div>

<div class="lvl-data">
	<p>Views: {{ pkg.views }} - Downloads: {{ pkg.downloads }} - Package ID: {{ pkg.id }}</p>
</div>

{{ comments(comments, 'package', pkg.id) }}
	{% endblock %}
