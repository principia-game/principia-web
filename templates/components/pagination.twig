{% set pages = (levels / lpp)|round(0, 'ceil') %}

{% if pages > 1 %}
<div class="pagination">
	{% if current != 1 %}
		<a class="btn" href="{{ url | format(current-1) }}">&laquo; Previous</a>
	{% else %}
		<div></div>
	{% endif %}
	{% if current != pages %}
		<a class="btn" href="{{ url | format(current+1) }}">Next &raquo;</a>
	{% else %}
		<div></div>
	{% endif %}
</div>
{% endif %}