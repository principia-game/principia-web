{% extends "_layout.twig" %}

{% set title = "Edit post" %}

	{% block content %}
{{ render_page_bar(topbot) }}

{% if action == 'Preview' %}
	<br>
	{{ threadpost(post) }}
{% endif %}

<br>
<form action="editpost?pid={{ pid }}" method="POST">
	<table class="c1">
		<tr class="h"><td class="b h" colspan="2">Edit Post</td></tr>
		<tr>
			<td class="b n1 center" width="120">Post:</td>
			<td class="b n2"><textarea name="message" id="message" rows="15" cols="80">{{ post.text }}</textarea></td>
		</tr><tr>
			<td class="b n1 center" colspan="2">
				<input type="submit" name="action" value="Preview">
				<input type="submit" name="action" value="Submit">
			</td>
		</tr>
	</table>
</form>
<br>

{{ render_page_bar(topbot) }}
	{% endblock %}